pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    stages {
        stage("Build") {
            steps {
                sh 'mvn package -DskipTests'  // Build the app
            }
        }

        stage("Create and Push") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub', 
                    usernameVariable: 'USER', 
                    passwordVariable: 'PASS'
                )]) {
                    sh 'docker build -t inde249/test-java:my_app .'  // Build Docker image
                    sh 'echo $PASS | docker login -u $USER --password-stdin'  // Login to Docker registry
                    sh 'docker push inde249/test-java:my_app'  // Push the image to Docker Hub
                }
            }
        }

        stage("Deploy") {
            steps {
                echo "Deploying app"  // Placeholder for deployment logic
            }
        }
    }

    post {
        success {
            script {
                // Send an email notification on success
                emailext(
                    subject: "Build Success Notification",
                    body: "The build has completed successfully and the Docker image has been pushed.",
                    to: "inder.23.edu@gmail.com"  // Add recipient email address
                )
            }
            echo 'Pipeline executed successfully!'
        }

        failure {
            script {
                // Send an email notification on failure
                emailext(
                    subject: "Build Failure Notification",
                    body: "The build has failed. Please check the logs for more details.",
                    to: "inder.23.edu@gmail.com"  // Add recipient email address
                )
            }
            echo 'Pipeline execution failed.'
        }

        always {
            script {
                // Optional: Send an email every time the pipeline finishes
                emailext(
                    subject: "Pipeline Completion Notification",
                    body: "The pipeline has finished execution. Please check the results.",
                    to: "inder.23.edu@gmail.com"
                )
            }
            echo 'Cleaning up...'
        }
    }
}

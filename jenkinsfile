pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    stages {
        stage("Build") {
            steps {
                sh 'mvn package -DskipTests'  // Build the app
            }
        }

        stage("Create and Push") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub', 
                    usernameVariable: 'USER', 
                    passwordVariable: 'PASS'
                )]) {
                    sh 'docker build -t inde249/test-java:my_app .'  // Build Docker image
                    sh 'echo $PASS | docker login -u $USER --password-stdin'  // Login to Docker registry
                    sh 'docker push inde249/test-java:my_app'  // Push the image to Docker Hub
                }
            }
        }

        stage("Deploy") {
            steps {
                echo "Deploying app"  // Placeholder for deployment logic
            }
        }
    }
  post {
        success {
            // Send an email on success
            mail 'inder.23.edu@gmail.com',  // Corrected: Remove 'to:'
                 'Pipeline Build Success',  // Subject
                 'The build was successful, and the Docker image was pushed to the registry.'  // Body
        }

        failure {
            // Send an email on failure
            mail 'inder.23.edu@gmail.com',  // Corrected: Remove 'to:'
                 'Pipeline Build Failure',  // Subject
                 'The build failed. Please check the Jenkins logs for more information.'  // Body
        }

        always {
            // Send an email regardless of the build result (optional)
            mail 'inder.23.edu@gmail.com',  // Corrected: Remove 'to:'
                 'Pipeline Execution Complete',  // Subject
                 'The pipeline execution has completed. Check the logs for more details.'  // Body
        }
    }

    }


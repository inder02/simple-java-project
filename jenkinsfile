pipeline {
    agent any

    tools {
        maven 'maven3'
    }

    stages {
        stage("Build") {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage("Create and Push") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub', 
                    usernameVariable: 'USER', 
                    passwordVariable: 'PASS'
                )]) {
                    sh 'docker build -t inde249/test-java:my_app .'
                    sh 'echo $PASS | docker login -u $USER --password-stdin'
                    sh 'docker push inde249/test-java:my_app'
                }
            }
        }

        stage("Deploy") {
            steps {
                echo "Deploying app"
            }
        }

   stage('Email Notification') {
            steps {
                script {
                    // Send an email notification
                    emailext(
                        subject: "Build Success/Failure Notification",
                        body: "The build has completed successfully or failed.",
                        to: "inder.23.edu@gmail.com"
                    )
                }
            }
        }
    }

    post {
        success {
            // Action to take if the pipeline succeeds
            echo 'Pipeline executed successfully!'
        }
        failure {
            // Action to take if the pipeline fails
            echo 'Pipeline execution failed.'
        }
        always {
            // Action to always take, regardless of success/failure
            echo 'Cleaning up...'
        }
    }
}
